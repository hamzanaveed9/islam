<!DOCTYPE html>
<html lang="en">
<head>  

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Title -->
  <title>Imam Sidyot | Empowering Excellence</title>

  <!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/salam_logo.png">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
  <!-- ==================== Scroll-Top Area (Start) ==================== -->
  <a href="#" class="scroll-top">
    <i class="fas fa-caret-up"></i>
  </a>
  <!-- ==================== Scroll-Top Area (End) ==================== -->

  <%= render partial: 'shared/header' %>

  <!-- ==================== Gallery Details Area (Start) ==================== -->
  <section class="events" id="events" style='margin-top: 90px'>
    <div class="heading">
      <h1>Gallery's Details Page</h1>
      <div class="design">
        <%= image_tag("salam_logo.png", alt: "Logo") %>
      </div>
    </div>
    <div class="image">
      <%= @gallery&.front_image&.attached? ? image_tag(@gallery&.front_image) : image_tag("Home-1.png", alt: "logo") %>
    </div>

    <div class="left-heading" style='margin: 10px 0px'>
    <h1><%= @gallery&.title %></h1>
    </div>
    <div class='detail'>
      <p style='margin-bottom: 10px; font: 20px'><%= @gallery&.description.html_safe %></p>
    </div>

    <!-- ==================== Slider Area (Start) ==================== -->
    
    <!-- ==================== Slider Area (End) ==================== -->
  </section>
  <!-- ==================== Gallery Details Area (End) ==================== -->



  <!-- ==================== Slider Area (Start) ==================== -->
  <% if @gallery&.slider_image_1&.attached? || @gallery&.slider_image_2&.attached? || @gallery&.slider_image_3&.attached? %>
  <section class="home" id="home" style='margin-bottom: 80px'>

    <div class="swiper-container home-slider">
      <div class="swiper-wrapper">
        <% if @gallery&.slider_image_1&.attached? %>
        <div class="swiper-slide home-item">
          <div class="image">
            <%= image_tag(@gallery&.slider_image_1) if @gallery&.slider_image_1&.attached? %>
          </div>
        </div>
        <% end %>

        <% if @gallery&.slider_image_2&.attached? %>
          <div class="swiper-slide home-item">
            <div class="image">
              <%= image_tag(@gallery&.slider_image_2) if @gallery&.slider_image_2&.attached? %>
            </div>

          </div>
        <% end %>

        <% if @gallery&.slider_image_3&.attached? %>
          <div class="swiper-slide home-item">
            <div class="image">
              <%= image_tag(@gallery&.slider_image_3) %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="swiper-pagination swiper-pagination1"></div>

      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>

    </div>
  </section>
  <% end %>
  
  <!-- ==================== Slider Area (End) ==================== -->

  <% unless @gallery&.images&.blank? %>      
  <section class="services" id="services">

    <div class="heading">
      <h1>our Images</h1>
      <div class="design"><%= image_tag("salam_logo.png", alt: "logo") %></div>
    </div>
      <div class="box-container">
        <% image_count = 0 %>
        <% @gallery&.images&.each do |image| %>
          <div class="service-item">
            <%= image_tag(image, alt: "Service-logo") %>
          </div>
          <% image_count += 1 %>

          <% if image_count % 3 == 0 %>
            <div class="noMobileView" style="width:100%;"></div>
          <% end %>
        <% end %>
      </div>
  </section>
  <% end %>
  <%= render partial: 'shared/footer' %>
  

  <!-- JQuery -->
 <%= javascript_include_tag 'jquery-3.6.0' %>
  <!-- SWIPER JS -->
  <%= javascript_include_tag 'swiper.js' %>
  <%= javascript_include_tag 'home-slider.js' %>
    <%= javascript_include_tag 'script.js' %>
        <%= javascript_include_tag 'scroll-spy.js' %>
  <!-- Animation -->
 <%= javascript_include_tag 'aos.js' %>


  <!-- ========== Custom Script ========== -->

  <!-- Contact-Form Script -->
  <script>
      jQuery('#contact-form').on('submit',function(e){
      jQuery('#contact-form #msg').html('');
      jQuery('#contact-form #submit').html('Please wait');
      jQuery('#contact-form #submit').attr('disabled',true);
      jQuery.ajax({
          url:'assets/php/submit.php',
          type:'post',
          data:jQuery('#contact-form').serialize(),
          success:function(result){
              jQuery('#contact-form #msg').html(result);
              jQuery('#contact-form #submit').html('Submit');
              jQuery('#contact-form #submit').attr('disabled',false);
              jQuery('#contact-form')[0].reset();
          }
      });
      e.preventDefault();
      });
  </script>

  <!-- INITIALIZING AOS -->
  <script>
    AOS.init({
        delay: 400,
        duration: 1000
    })
  </script>
</html>