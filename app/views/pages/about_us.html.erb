        <div class="mb-3">
          <%= form.text_area :message, class: 'box form-control', placeholder: 'Message', rows: 4 %>
        </div>

        <%= form.submit 'Submit Feedback', class: 'btn btn-primary' %>
      <% end %>

    </div>
</div>

